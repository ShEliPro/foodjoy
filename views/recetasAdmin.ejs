<!doctype html>
<html>
	<head>

		<meta charset="utf8" />
		<title> Recetas </title>

		<!-- Importamos el estilo css -->
		<link rel="stylesheet" href="../css/admin.css" /> 

	</head>

	<body>

		<div id="container">

			<nav id="menu_nav">

				<a href="/admin/usuarios"> <img src="../img/user-icon.png" width="15" height="15"> Usuarios </a>

				<a href="/admin/recetas"> <img src="../img/recetas-icon.png" width="16" height="16"> Recetas </a>

				<a href="/logout" style="float:right;">Logout</a>

			</nav> <!-- Cierre del menu nav-->

			<div id="info">

				<strong>Número de recetas: </strong> <%= recetas %> <br /><br />

				<!-- Mostrar una tabla de recetas, sólo el campo email -->
				<table border="1">

					<tr>
					 <td> Nombre</td>
					 <td> Ingredientes </td>
					</tr>


					<% for(var i = 0; i<receta.length; i++){ %>
					<tr>
						 <td><%= receta[i].nombre %></td>
						 <td><%= receta[i].ingredientes %></td>
					<% } %>
					</tr>

				</table>
			</div>

		</div> <!-- Cierre del div container -->

	</body>
</html>