<!doctype html>
<html>
	<head>

		<meta charset="utf8" />
		<title> Usuarios </title>

		<!-- Importamos el estilo css -->
		<link rel="stylesheet" href="../css/admin.css" /> 

	</head>

	<body>

		<div id="container">

			<nav id="menu_nav">

				<a href="/admin/usuarios"> <img src="../img/user-icon.png" width="15" height="15"> Usuarios </a>

				<a href="/admin/recetas"> <img src="../img/recetas-icon.png" width="16" height="16"> Recetas </a>

				<a href="/logout" style="float:right;">Logout</a>

			</nav> <!-- Cierre del menu nav-->

			<div id="info">

				<strong>Número de usuarios: </strong> <%= usuarios %> <br /><br />

				<!-- Mostrar una tabla de usuario, sólo el campo email -->
				<table border="1">

					<tr>
					 <td> id </td>
					 <td> Nombre </td>
					 <td> Contraseña </td>
					</tr>


					<% for(var i = 0; i<usuario.length; i++){ %>
					<tr>
						<td><%= usuario[i]._id %></td>
						<td><%= usuario[i].local.email %></td>
						<td><%= usuario[i].local.password %></td>
					<% } %>
					</tr>

				</table>

			</div>

		</div> <!-- Cierre del div container -->

	</body>
</html>